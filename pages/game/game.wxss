.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  min-height: 100vh;
}

.header {
  margin-bottom: 20rpx;
}

.title {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.5);
  text-align: center;
}

.info-panel {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.info-item {
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  flex: 1;
}

.info-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.info-value {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.canvas-container {
  width: 700rpx;
  height: 1000rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.game-canvas {
  width: 100%;
  height: 100%;
  background: #1a1a2e;
}

.controls {
  margin: 20rpx 0;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.tips {
  color: #fff;
  font-size: 28rpx;
  opacity: 0.9;
  text-align: center;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.game-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(245, 87, 108, 0.3);
}

.game-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}
